<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:orientation="vertical"
    android:background="#e7dfc2"
    android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save the Bear"
        android:textStyle="bold"
        android:textSize="42sp"
        android:textColor="#7F4C09" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/ic_bear"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"  />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/main_TV_mode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_below="@+id/txtTile"
                android:text="Game mode"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_alignParentStart="true"
                />
            <RadioGroup
                android:id="@+id/rBtnModeOptions"
                android:layout_below="@+id/txtModeTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:checkedButton="@id/rBtn_sensor">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rBtn_sensor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sensors" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rBtn_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buttons" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_TV_speed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_below="@+id/txtTile"
                android:text="Game speed"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_alignParentStart="true"
                />
            <RadioGroup
                android:id="@+id/rBtnSpeedOptions"
                android:layout_below="@+id/txtSpeedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:checkedButton="@id/rBtnSpeedSlow">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rBtnSpeedSlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Slow" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rBtnSpeedFast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fast" />
            </RadioGroup>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/main_btn_start_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#bb8044"
        />

    <Button
        android:id="@+id/main_btn_score_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scores List"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#bb8044" />

</LinearLayout>






